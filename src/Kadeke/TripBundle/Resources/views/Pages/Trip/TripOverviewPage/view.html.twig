{% extends 'KadekeWebsiteBundle:Layout:layout.html.twig' %}
{% block content %}
    <h2>{{ page.title }}</h2>

    {{ render_pageparts(page, 'main') }}

    {% set count = 0 %}
    {% if pagerfanta.nbResults > 0 %}
        {% for article in pagerfanta.currentPageResults %}
            {% if count > 0 %}<hr />{% endif %}
            <div style=" margin-right: 20px;">
                <h4><a href="{{ path('_slug', { 'url': get_node_translation_for(article).url }) }}">{{ article.title }}</a></h4>
                {{ article.summary }}
            </div>
            {% set count = count + 1 %}
        {% endfor %}

        {% if pagerfanta.haveToPaginate %}
            {{ pagerfanta(pagerfanta, 'twitter_bootstrap') }}
        {% endif %}
    {% endif %}

{% endblock %}